<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shivam.drdomapsproject.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/iconland"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:textSize="20sp"
        android:alpha="0.9"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/button_shape"
        android:textColor="@android:color/black"
        android:text="SHOW ROUTE"
        android:id="@+id/show_route"/>
<Button
    android:layout_width="300dp"
    android:layout_height="100dp"
    android:layout_marginLeft="40dp"
    android:alpha="0.9"
    android:textSize="20sp"
    android:layout_marginTop="15dp"
    android:text="GO TO LIST"
    android:background="@drawable/button_shape"
    android:id="@+id/view_files_button"
    />
    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginLeft="40dp"
        android:alpha="0.9"
        android:textSize="20sp"
        android:layout_marginTop="380dp"
        android:text="GO TO MAP"
        android:id="@+id/go_to_map"
        android:background="@drawable/button_shape" />
</FrameLayout>
